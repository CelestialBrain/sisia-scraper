{
  "name": "sisia-chat",
  "version": "1.0.0",
  "description": "SISIA - Ateneo Schedule Assistant AI Chatbot",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "scrape": "tsx src/index.ts",
    "fast": "tsx src/fastScraper.ts",
    "scrape:schedule": "tsx src/index.ts --schedule",
    "scrape:curriculum": "tsx src/index.ts --curriculum",
    "test": "vitest run",
    "test:watch": "vitest",
    "server": "cd chat && npm run server",
    "supabase:start": "supabase start",
    "dev": "lsof -ti:6101,6102 | xargs kill -9 2>/dev/null; supabase start && cd chat && npm run start",
    "dev:chat": "cd chat && npm run start",
    "start": "cd chat && npm run start"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "cheerio": "^1.0.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.0",
    "p-limit": "^6.0.0",
    "playwright": "^1.40.0",
    "undici": "^7.18.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
